meta {
  name: Search courses
  type: http
  seq: 4
}

get {
  url: {{BASE_URL}}/educational/courses/search
  body: none
  auth: none
}

params:query {
  ~orderBy: Name
  ~order: ascending
  ~pageIndex: 0
  ~itemsPerPage: 25
  ~name: English
}

headers {
  Authorization: Bearer {{ADMIN_USER_JWT}}
  x-api-key: {{API_CLIENT_INTERNAL_KEY}}
  Content-Type: application/json
}

tests {
  test("Request is successfull", function () {
      expect(res.getStatus()).to.equal(200);
      var jsonRes = res.getBody();
      expect(jsonRes.Status).to.eql('success');
  });
  
  test("List of courses is returned", function () {
  
      var jsonRes = res.getBody();
      expect(jsonRes.Data).to.have.property('Courses');
      expect(jsonRes.Data.Courses.Items.length).greaterThan(0);
  
  });
  
}
