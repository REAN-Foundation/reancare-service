meta {
  name: Add symptom type - difficulty with speech
  type: http
  seq: 2
}

post {
  url: {{BASE_URL}}/clinical/symptom-types
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  authorization: Bearer {{ADMIN_USER_JWT}}
  x-api-key: {{API_CLIENT_INTERNAL_KEY}}
}

body:json {
  {
      "Symptom": "Difficulty with speech",
      "Description": "Difficulty while talking, lack of clarity in speech",
      "Tags": [
          "Stroke"
      ],
      "Language": "en-US"
  }
}

tests {
  try {
      var jsonRes = res.getBody();
      var id = jsonRes.Data.SymptomType.id;
      bru.setEnvVar("SYMPTOM_TYPE_DIFFICULLTY_WITH_SPEECH_ID", id);
      console.log(id);
  }
  catch (error) {
      console.log(error.message);
  }
  
  test("Request is successfull", function () {
      expect(res.getStatus()).to.equal(201);
      var jsonRes = res.getBody();
      expect(jsonRes.Status).to.eql('success');
  });
}

