{
    "SystemIdentifier": "REAN HealthGuru",
    "Auth" : {
        "Authentication": "Custom",
        "Authorization": "Custom"
    },
    "Database" : {
        "Type": "SQL",
        "ORM": "Sequelize",
        "Flavour": "MySQL"
    },
    "Ehr" : {
        "Specification": "FHIR",
        "Provider": "GCP-FHIR"
    },
    "FileStorage" : {
        "Provider": "AWS-S3"
    },
    "Communication" : {
        "SMS": {
            "Provider": "Twilio"
        },
        "Email": {
            "Provider": "SendGrid"
        },
        "InAppNotifications": {
            "Provider": "Firebase"
        }
    },
    "TemporaryFolders": {
        "Upload": "./tmp/resources/uploads/",
        "Download": "./tmp/resources/downloads/",
        "CleanupFolderBeforeMinutes": 10
    },
    "Careplans" : [
        { 
            "Provider": "AHA",
            "Service": "AhaCarePlanService",
            "Plans": [
                {
                    "ProviderName": "Core",
                    "ProviderCode": "Core",
                    "DisplayName": "AHA-Core",
                    "DefaultDurationDays": 84
                },
                {
                    "ProviderName": "Heart Failure",
                    "ProviderCode": "HeartFailure",
                    "DisplayName": "AHA-Heart Failure",
                    "DefaultDurationDays": 84
                }
            ]
        }
    ],
    "FormServiceProviders" : [
        { 
            "Provider": "KoboToolbox",
            "Code": "KoboToolbox"
        },
        { 
            "Provider": "GoogleForms",
            "Code": "GoogleForms"
        }
    ],
    "MaxUploadFileSize": 104857600
}
