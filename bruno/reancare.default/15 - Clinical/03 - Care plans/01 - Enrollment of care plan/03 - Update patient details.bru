meta {
  name: Update patient details
  type: http
  seq: 3
}

put {
  url: {{BASE_URL}}/patients/{{PATIENT_USER_ID}}
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{PATIENT_USER_JWT}}
  x-api-key: {{API_CLIENT_INTERNAL_KEY}}
  Content-Type: application/json
}

body:json {
  {
      "Prefix": "Mr.",
      "FirstName": "{{FIRST_NAME}}",
      "MiddleName": "X",
      "LastName": "{{LAST_NAME}}",
      "Email": "{{EMAIL}}",
