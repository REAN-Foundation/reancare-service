meta {
  name: Mark list of med consumptions as missed
  type: http
  seq: 11
}

put {
  url: {{BASE_URL}}/clinical/medication-consumptions/mark-list-as-missed
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{PATIENT_USER_JWT}}
  x-api-key: {{API_CLIENT_INTERNAL_KEY}}
  Content-Type: application/json
}

body:json {
  {
      "MedicationConsumptionIds": [
          "{{MEDICATION_CONSUMPTION_ID_04}}",
          "{{MEDICATION_CONSUMPTION_ID_06}}"
      ]
  }
}

tests {
  
  test("Request is successfull", function () {
      expect(res.getStatus()).to.equal(200);
      var jsonRes = res.getBody();
      expect(jsonRes.Status).to.eql('success');
  });
  
  test("Medication consumption schedules in list are marked as missed", function () {
     
      var jsonRes = res.getBody();
      expect(jsonRes.Data).to.have.property('MedicationConsumptions');
      expect(jsonRes.Data.MedicationConsumptions).to.not.be.empty;
      expect(jsonRes.Data.MedicationConsumptions.length).equals(2);
  
      var firstMed = jsonRes.Data.MedicationConsumptions[0];
      var secondMed = jsonRes.Data.MedicationConsumptions[1];
  
      expect(firstMed.Status).equals("Missed");
      expect(secondMed.Status).equals("Missed");
    
  });
  
}
