meta {
  name: Get careplan eligibility
  type: http
  seq: 5
}

get {
  url: {{BASE_URL}}/care-plans/eligibility/{{PATIENT_USER_ID}}/providers/AHA/careplans/{{CARE_PALN_CODE}}
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{ADMIN_USER_JWT}}
  x-api-key: {{API_CLIENT_INTERNAL_KEY}}
  Content-Type: application/json
}

script:pre-request {
  bru.setEnvVar("CARE_PALN_CODE", "HeartFailure");
}

tests {
  
  test("Request is successfull", function () {
      expect(res.getStatus()).to.equal(200);
      var jsonRes = res.getBody();
      expect(jsonRes.Status).to.eql('success');
  });
  
  test("List of available care plans is returned", function () {
  
      var jsonRes = res.getBody();
      expect(jsonRes.Data).to.have.property('Eligibility');
      expect(jsonRes.Data.Eligibility).to.have.property('Eligible');
      expect(jsonRes.Data.Eligibility.Eligible).to.equal(true);
  
  });
  
}
