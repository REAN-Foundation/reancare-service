meta {
  name: Get severity list
  type: http
  seq: 1
}

get {
  url: {{BASE_URL}}/types/severities
  body: none
  auth: none
}

headers {
  x-api-key: {{API_CLIENT_INTERNAL_KEY}}
  Content-Type: application/json
}

tests {
  try {
      var jsonRes = res.getBody();
      var personRoles = jsonRes.Data.PersonRoleTypes;
      for(var i = 0; i < personRoles.length; i++) {
          var r = personRoles[i];
          var name = r.RoleName;
          var id = r.id;
          var str = "ROLE_" + name.toUpperCase();
          console.log(str);
          console.log(id);
          bru.setEnvVar(str, id);
      }
  }
  catch (error) {
      console.log(error.message);
  }
  
  test("Request is successfull", function () {
      expect(res.getStatus()).to.equal(200);
      var jsonRes = res.getBody();
      expect(jsonRes.Status).to.eql('success');
  });
  
  test("Person roles are retrieved", function () {
      var jsonRes = res.getBody();
      expect(jsonRes.Data).to.have.property('Severities');
      expect(jsonRes.Data.Severities).to.not.be.empty;
      var count = jsonRes.Data.Severities.length;
      expect(count).greaterThan(0);
  });
  
}
