meta {
  name: Remove an address from person
  type: http
  seq: 3
}

post {
  url: {{BASE_URL}}/persons/{{PATIENT_PERSON_ID}}/remove-address/{{ADDRESS_ID}}
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{PATIENT_USER_JWT}}
  x-api-key: {{API_CLIENT_INTERNAL_KEY}}
  Content-Type: application/json
}

body:json {
  {
      "PersonId": "{{PERSON_ID}}"
  }
}

tests {
  test("Request is successfull", function () {
      expect(res.getStatus()).to.equal(200);
      var jsonRes = res.getBody();
      expect(jsonRes.Status).to.eql('success');
  });
  
  test("Address removed from person", function () {
      var jsonRes = res.getBody();
      expect(jsonRes.Data).to.have.property('Removed');
      expect(jsonRes.Data.Removed).to.eql(true);
  });
  
}

docs {
  Update the details for an address.
}
